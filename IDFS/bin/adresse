#!/usr/bin/env python3
import subprocess

def adresse():
    try:
        result = subprocess.run(["ip", "addr"], capture_output=True, text=True, check=True)
        print(result.stdout)
    except subprocess.CalledProcessError as e:
        print(f"Une erreur s'est produite : {e}")

if __name__ == "__main__":
    adresse()
